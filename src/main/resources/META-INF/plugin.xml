<idea-plugin>
  <id>com.bekmnsrw.plugin.recompose.recompose</id>
  <name>Recompose</name>
  <vendor email="ilya.bekmansurov@gmail.com">bekmnsrw</vendor>
  <description><![CDATA[IntelliJ IDEA plugin to debug recomposition process of Composable functions]]></description>

  <depends>com.intellij.modules.platform</depends>
  <depends>org.jetbrains.kotlin</depends>

  <extensions defaultExtensionNs="com.intellij">
  </extensions>
  <actions>
    <action id="com.bekmnsrw.plugin.recompose.InitRecompositionCounterAction"
            class="com.bekmnsrw.recompose.InitRecompositionCounterAction" text="Init RecompositionCounter"
            description="Initializing inline @Composable function to count number of recompositions">
      <add-to-group group-id="KotlinGenerateGroup" anchor="last"/>
    </action>
  </actions>
</idea-plugin>
